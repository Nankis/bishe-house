<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cj.bishe.dao.HousePicDao">

    <resultMap type="com.cj.bishe.entity.HousePic" id="HousePicMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="houseId" column="house_id" jdbcType="INTEGER"/>
        <result property="picUrl" column="pic_url" jdbcType="VARCHAR"/>
        <result property="createdTime" column="created_time" jdbcType="TIMESTAMP"/>
        <result property="updatedTime" column="updated_time" jdbcType="TIMESTAMP"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="HousePicMap">
        select
          id, house_id, pic_url, created_time, updated_time, status
        from cjhouse.house_pic
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="HousePicMap">
        select
          id, house_id, pic_url, created_time, updated_time, status
        from cjhouse.house_pic
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="HousePicMap">
        select
          id, house_id, pic_url, created_time, updated_time, status
        from cjhouse.house_pic
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="houseId != null">
                and house_id = #{houseId}
            </if>
            <if test="picUrl != null and picUrl != ''">
                and pic_url = #{picUrl}
            </if>
            <if test="createdTime != null">
                and created_time = #{createdTime}
            </if>
            <if test="updatedTime != null">
                and updated_time = #{updatedTime}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into cjhouse.house_pic(house_id, pic_url, created_time, updated_time, status)
        values (#{houseId}, #{picUrl}, #{createdTime}, #{updatedTime}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update cjhouse.house_pic
        <set>
            <if test="houseId != null">
                house_id = #{houseId},
            </if>
            <if test="picUrl != null and picUrl != ''">
                pic_url = #{picUrl},
            </if>
            <if test="createdTime != null">
                created_time = #{createdTime},
            </if>
            <if test="updatedTime != null">
                updated_time = #{updatedTime},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from cjhouse.house_pic where id = #{id}
    </delete>

</mapper>