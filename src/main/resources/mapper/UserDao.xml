<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cj.bishe.dao.UserDao">

    <resultMap type="com.cj.bishe.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="pwd" column="pwd" jdbcType="VARCHAR"/>
        <result property="money" column="money" jdbcType="NUMERIC"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="createdTime" column="created_time" jdbcType="TIMESTAMP"/>
        <result property="modifiedTime" column="modified_time" jdbcType="TIMESTAMP"/>
        <result property="deleted" column="deleted" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          id, username, pwd, money, type,  created_time, modified_time, deleted, status, name
        from cjhouse.user
        where id = #{id}
    </select>

    <!--查询单个-->
    <select id="queryByUserName" resultMap="UserMap">
        select
          id, username, pwd, money, type, created_time, modified_time, deleted, status, name
        from cjhouse.user
        where username = #{username}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          id, username, pwd, money, type,  created_time, modified_time, deleted, status, name
        from cjhouse.user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
        id, username, pwd, money, type, created_time, modified_time, deleted, status, name
        from cjhouse.user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="pwd != null and pwd != ''">
                and pwd = #{pwd}
            </if>
            <if test="money != null">
                and money = #{money}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="createdTime != null">
                and created_time = #{createdTime}
            </if>
            <if test="modifiedTime != null">
                and modified_time = #{modifiedTime}
            </if>
            <if test="deleted != null">
                and deleted = #{deleted}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into cjhouse.user(username, pwd, money, type, created_time, modified_time, deleted, status, name)
        values (#{username}, #{pwd}, #{money}, #{type},NOW(), #{modifiedTime}, 0, 0, #{name})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update cjhouse.user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="pwd != null and pwd != ''">
                pwd = #{pwd},
            </if>
            <if test="money != null">
                money = #{money},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="deleted != null">
                deleted = #{deleted},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            modified_time = NOW()
        </set>
        where id = #{id}
    </update>

    <!--通过用户名修改数据-->
    <update id="updateUserByUserName">
        update cjhouse.user
        <set>
            <if test="pwd != null and pwd != ''">
                pwd = #{pwd},
            </if>
            <if test="money != null">
                money = #{money},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="deleted != null">
                deleted = #{deleted},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            modified_time = NOW()
        </set>
        where username = #{username}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from cjhouse.user where id = #{id}
    </delete>

</mapper>